        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="600" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition />

        </Grid.ColumnDefinitions>

        <StackPanel x:Name="NavBarContainer" Grid.Column="0"  Background="LightSeaGreen">
            
