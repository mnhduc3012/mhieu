<UserControl x:Class="FUMiniHotelManagement.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FUMiniHotelManagement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150">

    <StackPanel  Orientation="Vertical" HorizontalAlignment="Center" Width="150px">
        <Button Width="100px" x:Name="btnCustomer" Margin="0 20" Height="40" Click="btnCustomer_Click">
            <TextBlock Text="Customer Management" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button Width="100px" x:Name="btnRoom" Margin="0 20" Height="40" Click="btnRoom_Click">
            <TextBlock Text="Room Management" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button Width="100px" x:Name="btnLogout" Margin="0 20" Height="40" Click="btnLogout_Click">
            <TextBlock  Text="Logout" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button Width="100px" x:Name="btnQuit" Margin="0 20" Height="40" Click="btnQuit_Click">
            <TextBlock  Text="Quit" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
    </StackPanel>

</UserControl>
